# Project Chimera Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it's in .gitignore)

# ============================================
# Redis Configuration
# ============================================
# Redis connection URL for queue management
# Format: redis://[username]:[password]@[host]:[port]/[db]
# Local development: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Weaviate Configuration
# ============================================
# Weaviate vector database URL
# Local: http://localhost:8080
# Cloud: https://your-cluster.weaviate.network
WEAVIATE_URL=http://localhost:8080

# Weaviate API Key (if using authenticated instance)
# Leave empty for local development without auth
WEAVIATE_API_KEY=

# ============================================
# Coinbase Developer Platform (CDP) Configuration
# ============================================
# Coinbase AgentKit API credentials
# Get these from: https://portal.cdp.coinbase.com/
# 
# CDP_API_KEY_NAME: The name/identifier of your API key
CDP_API_KEY_NAME=your-cdp-api-key-name

# CDP_API_KEY_PRIVATE_KEY: The private key for your API key
# Format: -----BEGIN EC PRIVATE KEY-----\n...\n-----END EC PRIVATE KEY-----
CDP_API_KEY_PRIVATE_KEY=your-cdp-api-key-private-key

# ============================================
# Budget Limits (Optional)
# ============================================
# Maximum daily spending limits per currency
# These can be overridden in code, but env vars provide defaults
MAX_DAILY_USDC=50.0
MAX_DAILY_ETH=0.01

# ============================================
# LLM API Keys (For Future Integration)
# ============================================
# Gemini API Key (for reasoning and vision)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Anthropic API Key (for Claude Opus)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI API Key (for GPT-4o Vision)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ============================================
# PostgreSQL Configuration (Optional)
# ============================================
# PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
POSTGRES_URL=postgresql://chimera:chimera_password@localhost:5432/chimera_db

# ============================================
# Social Media API Keys (For Future MCP Servers)
# ============================================
# Twitter/X API credentials
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=

# Instagram API credentials
INSTAGRAM_ACCESS_TOKEN=

# ============================================
# Application Configuration
# ============================================
# Environment: development, staging, production
ENVIRONMENT=development

# Log Level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Agent Configuration
NUM_WORKERS=3
DEFAULT_RELEVANCE_THRESHOLD=0.75
